@model ConsultaSystem.Entities.Consulta

@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12 ">
        @using (Ajax.BeginForm("Edit", "Consultas", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "teste" }, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.IDExame)
            @Html.HiddenFor(model => model.IDTipoDeExame)
            @Html.HiddenFor(model => model.Protocolo)


            <div class="form-group">
                <label class="control-label col-md-2"> Paciente </label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Paciente.Nome)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Exame </label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Exame.Nome)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Tipo do Exame </label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.TipoDeExame.Nome)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Horario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.Horario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Horario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none;">
                @Html.LabelFor(model => model.Protocolo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Protocolo)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    @Html.ActionLink("Voltar", "Index", new object { },
                    new { @class = "btn btn-default" })
                    <button type="submit" class="btn btn-primary">
                        Salvar
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<span id="Message" style="display:none;">@TempData["Message"]</span>
<span id="InvalidModelState" style="display:none;">@TempData["InvalidModelState"]</span>
